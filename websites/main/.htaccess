RewriteEngine on
ErrorDocument 404 /error.php?code=404
ErrorDocument 403 /error.php?code=403

RewriteCond %{HTTP_HOST} !^www\.
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

#Hide internal files
RewriteCond %{THE_REQUEST} ^.+?\ [^?]+\.php[?\ ]
RewriteCond %{REQUEST_URI} !error\.php
RewriteCond %{REQUEST_URI} !do_send_contact_email\.php
RewriteRule \.php$ - [F]

#v5: These are old www.fansubs.cat pages, redirect where more appropriate
# The following no longer exist:
RewriteRule ^arxiu/?$ https://noticies.fansubs.online [R=301,L]
RewriteRule ^envia-noticies-contacta/?$ contacta-amb-nosaltres [R=301,L]
RewriteRule ^estadistiques/$ https://noticies.fansubs.online [R=301,L]
RewriteRule ^fansub/(.+)/pagina/(.+)/?$ https://noticies.fansubs.online [R=301,L]
RewriteRule ^fansub/(.+)/?$ https://noticies.fansubs.online [R=301,L]
# Old advent calendar for 2020 (pre-v4):
RewriteRule ^nadal/?$ https://advent.fansubs.online/2020 [R=301,L]
# These still exist, but on a different domain
RewriteRule ^pagina/(.+)/?$ https://noticies.fansubs.online/pagina/$1 [R=301,L]
RewriteRule ^rss/?$ https://noticies.fansubs.online/rss [R=301,L]
RewriteRule ^cerca/(.+)/pagina/(.+)/?$ https://noticies.fansubs.online/cerca/$1 [R=301,L]
RewriteRule ^cerca/(.+)/?$ https://noticies.fansubs.online/cerca/$1 [R=301,L]

#Normal pages
RewriteRule ^qui-som/?$ about.php [L]
RewriteRule ^politica-de-privadesa/?$ privacy.php [L]
RewriteRule ^contacta-amb-nosaltres/?$ contact.php [L]
RewriteRule ^llista-de-fansubs/?$ fansubs.php [L]

